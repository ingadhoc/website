<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_shop_checkout']" possition="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" id="force_sale_order_confirmation_setting">
                    <div class="o_setting_left_pane">
                        <field name="force_sale_order_confirmation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="force_sale_order_confirmation"/>
                         <div class="text-muted">
                            The setting will force any eCommerce sales orders state to 'Sale order' when the clients finish their purchases
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
