  </xpath>
    <xpath expr="//div[@class='panel-body']/div[@class='row'][3]/div[@class='col-md-6'][2]/div[2]" position="attributes">
      <attribute name="t-if">False</attribute>
  </xpath>
</template>

</data>
</odoo>
