<?xml version="1.0"?>
<odoo>
    <record id="view_website_config_settings" model="ir.ui.view">
        <field name="name">res.config.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="website_shop_checkout" position="inside">
                <setting id="sale_order_type_setting" string="Sale Order Type" help="Configure Sale order type to use on Website">
                    <field name="sale_order_type_id" class="oe_inline"/>
                </setting>
            </block>
        </field>
    </record>
</odoo>
