<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <template id="mercadopago_acquirer_button">
            <form t-if="acquirer.mercadopago_secret_key and acquirer.mercadopago_client_id and mercadopago_data" t-att-action="tx_url" method="post" target="_self">
                <input type="hidden" name="mercadopago_data" t-att-value="mercadopago_data"/>
                <button type="submit" width="100px"
                    t-att-class="submit_class">
                    <img t-if="not submit_txt" src="/payment_mercadopago/static/src/img/mercadopago_icon.png"/>
                    <span t-if="submit_txt"><t t-esc="submit_txt"/> <span class="fa fa-long-arrow-right"/></span>
                </button>
            </form>
        </template>

    </data>
</odoo>
