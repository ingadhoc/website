<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.website.sale.product.description.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <group name="email_template_and_project" position="after">
                <group>
                    <separator string="Description for Website"/>
                    <field name="description_website" placeholder="Note to be displayed on website..."/>
                </group>
            </group>
        </field>
    </record>
</odoo>
