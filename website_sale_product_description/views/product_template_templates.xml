<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <template id="product_description" inherit_id="website_sale.product" name="Website Sale Product Description">
        <xpath expr="//p[@t-field='product.description_sale']" position="attributes">
            <attribute name="t-field">product.description_website</attribute>
        </xpath>
        <xpath expr="//hr[@t-if='product.description_sale']" position="attributes">
            <attribute name="t-if">product.description_website</attribute>
        </xpath>
    </template>
</odoo>
