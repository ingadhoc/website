<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="sale_product_catalog_settings">
                <div class="col-12 col-lg-12 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="website_extend_search_fields"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Search Fields" for="website_search_fields_list"/>
                        <div class="text-muted">
                            Add extra fields to search in the eCommerce.
                        </div>
                        <div class="content-group" attrs="{'invisible': [('website_extend_search_fields', '=', False)]}">
                            <div class="mt16">
                                <field name="website_search_fields_list" placeholder="['field_1', 'field_2.name']"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
