<template id="payment" inherit_id="website_sale.payment" name="Taxes Included Payment">
  <xpath expr="//span[@t-field='line.price_unit']" position="attributes">
    <attribute name="t-field">line.discounted_price</attribute>
  </xpath>
</template>

