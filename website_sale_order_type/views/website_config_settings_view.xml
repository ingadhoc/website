<?xml version="1.0"?>
<odoo>
    <record id="view_website_config_settings" model="ir.ui.view">
        <field name="name">res.config.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_checkout_settings']" possition="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" id="sale_order_type_setting">
                    <div class="o_setting_right_pane">
                        <label for="sale_order_type_id"/>
                         <div class="text-muted">
                            Configure Sale order type to use on Website 
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <field name="sale_order_type_id" class="oe_inline"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
